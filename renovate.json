{
  "extends": [
    "config:base"
  ],
  "schedule": ["after 8am every weekday", "every weekend"],
  "ignoreDeps": ["@types/node", "execa", "chalk"],
  "semanticPrefix": "build(devs-dep)",
  "timezone": "UTC",
  "packageRules": [
    {
      "matchPackageNames": ["@angular", "angular"],
      "groupName": "angular",
      "rangeStrategy": "bump"
    },
    {
      "matchDepTypes": [
        "optionalDependencies",
        "peerDependencies"
      ],
      "enabled": false
    }
  ]
}
