{
  "extends": [
    ":dependencyDashboard",
    "group:babelMonorepo",
    "group:commitlintMonorepo",
    "group:docusaurusMonorepo",
    ":prHourlyLimit2",
    ":prConcurrentLimit10",
    "workarounds:all"
  ],
  "rangeStrategy": "bump",
  "ignoreDeps": [
    "@mdx-js/react",
    "@types/react",
    "execa",
    "chalk",
    "react",
    "react-dom"
  ],
  "semanticCommits": "enabled",
  "commitMessagePrefix": "build(deps):",
  "separateMajorMinor": true,
  "timezone": "UTC",
  "packageRules": [
    {
      "matchPaths": ["examples/**"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "matchPaths": ["package.json"],
      "matchPackagePatterns": ["^@angular", "ng-packagr"],
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "Angular packages"
    },
    {
      "matchPaths": ["package.json"],
      "matchPackagePatterns": ["jest"],
      "excludePackageNames": ["eslint-plugin-jest"],
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "Jest packages"
    },
    {
      "extends": ["packages:eslint"],
      "groupName": "ESLint packages"
    },
    {
      "matchPackagePrefixes": ["esbuild"],
      "groupName": "Esbuild packages"
    },
    {
      "matchPackageNames": [
        "angular-in-memory-web-api",
        "rxjs",
        "tslib",
        "typescript"
      ],
      "matchUpdateTypes": ["patch"],
      "enabled": true
    },
    {
      "matchPackageNames": [
        "angular-in-memory-web-api",
        "rxjs",
        "tslib",
        "typescript"
      ],
      "matchUpdateTypes": ["major", "minor"],
      "enabled": false
    },
    {
      "matchPackageNames": [
        "angular-in-memory-web-api",
        "rxjs",
        "tslib",
        "typescript"
      ],
      "matchUpdateTypes": ["patch"],
      "enabled": true
    },
    {
      "matchFiles": ["package.json"],
      "matchDepTypes": ["dependencies", "optionalDependencies"],
      "rangeStrategy": "in-range-only"
    },
    {
      "matchDepTypes": ["peerDependencies"],
      "enabled": false
    }
  ]
}
