{
  "extends": [
    "config:base"
  ],
  "rangeStrategy": "bump",
  "schedule": ["after 8am every weekday", "every weekend"],
  "ignoreDeps": ["@types/node", "execa", "chalk"],
  "semanticPrefix": "build(devs-dep)",
  "timezone": "UTC",
  "packageRules": [
    {
      "matchPackagePatterns": ["^@angular", "*angular*"],
      "groupName": "angular"
    },
    {
      "matchDepTypes": [
        "dependencies"
      ],
      "rangeStrategy": "in-range-only"
    },
    {
      "matchDepTypes": [
        "optionalDependencies",
        "peerDependencies"
      ],
      "enabled": false
    }
  ]
}
