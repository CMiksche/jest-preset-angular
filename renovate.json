{
  "extends": [
    ":dependencyDashboard",
    "group:commitlintMonorepo",
    "group:docusaurusMonorepo",
    ":prHourlyLimit2",
    ":prConcurrentLimit10",
    "workarounds:all"
  ],
  "rangeStrategy": "bump",
  "ignoreDeps": ["execa", "chalk", "@mdx-js/react", "react", "react-dom", "@types/react"],
  "semanticCommits": "enabled",
  "commitMessagePrefix": "build(deps):",
  "separateMajorMinor": true,
  "timezone": "UTC",
  "packageRules": [
    {
      "matchPaths": ["examples/**"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "matchPaths": ["package.json"],
      "matchPackagePatterns": ["^@angular", "ng-packagr"],
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "Angular packages"
    },
    {
      "matchPaths": ["package.json"],
      "matchPackagePatterns": ["jest"],
      "excludePackageNames": ["eslint-plugin-jest"],
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "Jest packages"
    },
    {
      "packageNames": ["typescript", "rxjs", "tslib"],
      "separateMinorPatch": true
    },
    {
      "packageNames": ["typescript", "rxjs", "tslib"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "matchFiles": ["package.json"],
      "matchDepTypes": [
        "dependencies",
        "optionalDependencies"
      ],
      "rangeStrategy": "in-range-only"
    },
    {
      "matchDepTypes": [
        "peerDependencies"
      ],
      "enabled": false
    }
  ]
}
